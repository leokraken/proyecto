@model SAREM.Web.Models.ConsultaMasiva


@{
    ViewBag.Title = "Crear Consulta Masiva";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>

<ol class="breadcrumb">
    <li><a href="#">Consultas</a></li>
    <li class="active">Crear Consulta Masiva</li>
</ol>

<div class="paragraphs">
    <div class="row">
        <div class="span4">
            <div class="content-heading" style="margin-left:17px !important;">

                <h3 class="pull-left">Crear Consulta Masiva &nbsp &nbsp &nbsp &nbsp </h3>
                <img src="~/Content/images/agenda2.png" />
            </div>

        </div>
    </div>
</div>

<hr />
@if (Model.success) { 
<div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>Éxito:</strong> Todas las consultas han sido creadas correctamente.
</div>
} else if (Model.warning) {
<div class="alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>Advertencia:</strong> Algunas consultas no han sido creadas correctamente. Por favor, revise si los campos ingresados son correctos.
</div>
}
else if (Model.danger)
{
<div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong>Error:</strong> Se ha producido un error grave al crear las Consultas. Verifique que el archivo subido corresponde con el Template-Consulta.xlsx, y que los datos ingresados sean correctos.
</div>
}

<div class="form-group">
    <label>Template &nbsp &nbsp &nbsp </label>

    @Html.ActionLink("Descargar", "DownloadTemplate", "Consulta")
</div>

@using (Html.BeginForm("Upload", "Consulta", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    
    <div class="form-group">
        <label>Archivo a Subir</label>
        <input type="file" name="UploadedFile" id="uploadedfile">
         
    </div>
    <button type="submit" class="btn btn-default" disabled>Subir Archivo</button>
}

<script>
    $(document).ready(function () {

        $('#uploadedfile').change(function () {
           
            if (document.getElementById("uploadedfile").files.length > 0) {
               
                $('button[type="submit"]').prop('disabled', false);
            } else {

                $('button[type="submit"]').prop('disabled', true);
            }

        });
    })
</script>